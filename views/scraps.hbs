<a class="btn btn-info" href="/admin/scraps/create/"><span uk-icon="plus"></span> Add new Website </a>

<table class="uk-table uk-table-striped">
    <thead>
        <tr>
            <th>Website</th>
            <th>Url</th>
        </tr>
    </thead>

    <tbody>
        {{#each scraps}}
        <tr>
            <td>{{websitename}}</td>
            <td>{{url}}</td>
            <td>
                <a href="scraps/edit/{{_id}}" class="btn btn-info"><span uk-icon="pencil"></span></a>
                <a href="scraps/view/{{_id}}" class="btn btn-info"><span uk-icon="cloud-download"></span></a>
                <a href="scraps/edit/{{_id}}" class="btn btn-info"><span uk-icon="trash"></span></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>