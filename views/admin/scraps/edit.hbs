<form action="/admin/scraps/edit/{{scrap._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="websitename">Website Name</label>
    <input name="websitename" type="text" class="uk-input uk-form-medium" id="websitename"
      placeholder="Enter Websitename" value="{{scrap.websitename}}" required>
  </div>

  <div class="form-group">
    <label for="url">interval (mins)</label>
    <input type="number" name="everyMinute" class="uk-input uk-form-medium" id="everyMinute" value="{{scrap.everyMinute}}">
  </div>


  <div class="form-group">
    <label for="url">Url</label>
    <input name="url" class="uk-input uk-form-medium" id="url" value="{{scrap.url}}">
  </div>
  <div class="uk-group">
    <button type="submit" class="uk-button uk-button-primary uk-button-medium ">Update Scrap</button>
  </div>
</form>